@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" Theme="falufTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar DisableGutters="true">
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="() => showNavigationMenu = !showNavigationMenu" Class="ms-2" />

		<MudSpacer />

		<MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" AnchorOrigin="Origin.BottomLeft" Class="me-2">
			<MudMenuItem>Terms & Service</MudMenuItem>
			<MudMenuItem>Privacy Policy</MudMenuItem>
			<MudMenuItem>Contact</MudMenuItem>
		</MudMenu>

		<MudFab Href="/signin" Color="Color.Tertiary" Label="Sign in" Size="Size.Small" StartIcon="@Icons.Material.Filled.PersonOutline" Class="me-4" />
	</MudAppBar>

	<MudDrawer @bind-Open="@showNavigationMenu" Elevation="8" Variant="DrawerVariant.Responsive">
		<MudDrawerHeader LinkToIndex="true" Class="align-center d-flex justify-center">
			<MudImage Src="_content/Faluf.WASM.SharedBlazorUI/images/logo_transparent.png" Height="150" />
		</MudDrawerHeader>

		<MudDivider DividerType="DividerType.Middle" Class="mb-2" />

		<MudNavMenu Color="Color.Default" Margin="Margin.Normal" Bordered="true">
			<MudNavLink Href="/portfolio" Icon="@Icons.Material.Filled.Dashboard">Portfolio</MudNavLink>
			<MudNavLink Href="/signalr" Icon="@Icons.Material.Filled.CellTower">SignalR</MudNavLink>
			<MudNavLink Href="/streaming" Icon="@Icons.Material.Filled.OndemandVideo">Streaming</MudNavLink>
			<MudNavLink Href="/openai" Icon="@Icons.Material.Filled.BubbleChart">AI</MudNavLink>
			<MudNavLink Href="/csharp" Icon="@Icons.Material.Filled.DataObject">Code Editor</MudNavLink>
			<MudNavLink Href="/html" Icon="@Icons.Material.Filled.Html">HTML markdown</MudNavLink>
			<MudNavLink Href="/data" Icon="@Icons.Material.Filled.List">Bulk data</MudNavLink>
			<MudNavLink Href="/calculator" Icon="@Icons.Material.Filled.Calculate">Calculator</MudNavLink>
		</MudNavMenu>
	</MudDrawer>

	<MudMainContent>
		@Body
	</MudMainContent>
</MudLayout>

@code {
	private bool showNavigationMenu = true;

	private MudTheme falufTheme = new()
		{
			LayoutProperties = new LayoutProperties()
			{
				DrawerWidthLeft = "240px",
				DefaultBorderRadius = "10px",
				AppbarHeight = "60px"
			},
			Typography = new Typography()
			{
				H5 = new H5()
				{
					FontSize = "1.5em",
					LetterSpacing = "1px"
				},
				Default = new Default()
				{ 
					FontSize = "1.1em"
				}
			}
		};
}